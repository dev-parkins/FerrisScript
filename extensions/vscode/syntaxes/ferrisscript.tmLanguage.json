{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FerrisScript",
  "scopeName": "source.ferrisscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ferrisscript",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ferrisscript",
          "match": "\\b(if|else|while|return)\\b"
        },
        {
          "name": "keyword.other.ferrisscript",
          "match": "\\b(fn|let|mut)\\b"
        },
        {
          "name": "constant.language.boolean.ferrisscript",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "variable.language.self.ferrisscript",
          "match": "\\bself\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.primitive.ferrisscript",
          "match": "\\b(i32|f32|bool|void)\\b"
        },
        {
          "name": "entity.name.type.string.ferrisscript",
          "match": "\\bString\\b"
        },
        {
          "name": "entity.name.type.godot.ferrisscript",
          "match": "\\b(Vector2|Node)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ferrisscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ferrisscript",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.ferrisscript",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.ferrisscript",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ferrisscript",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "entity.name.function.godot.ferrisscript",
          "match": "\\b(_ready|_process|_physics_process|_input|_unhandled_input|_draw)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.ferrisscript",
          "match": "(\\+=|-=|=)"
        },
        {
          "name": "keyword.operator.comparison.ferrisscript",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.ferrisscript",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.ferrisscript",
          "match": "(\\+|-|\\*|/)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.braces.ferrisscript",
          "match": "[{}]"
        },
        {
          "name": "punctuation.section.parens.ferrisscript",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.comma.ferrisscript",
          "match": ","
        },
        {
          "name": "punctuation.terminator.statement.ferrisscript",
          "match": ";"
        },
        {
          "name": "punctuation.accessor.ferrisscript",
          "match": "\\."
        },
        {
          "name": "punctuation.separator.type.ferrisscript",
          "match": ":"
        },
        {
          "name": "punctuation.separator.return-type.ferrisscript",
          "match": "->"
        }
      ]
    }
  }
}
