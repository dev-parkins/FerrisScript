{
  "name": "ferrisscript",
  "displayName": "FerrisScript",
  "description": "Full IDE support for FerrisScript: completion, hover tooltips, error diagnostics, and syntax highlighting for Rust-inspired scripting in Godot 4.x",
  "version": "0.0.3",
  "publisher": "ferrisscript",
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-parkins/FerrisScript"
  },
  "bugs": {
    "url": "https://github.com/dev-parkins/FerrisScript/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "ferrisscript",
    "godot",
    "rust",
    "game development",
    "scripting"
  ],
  "icon": "icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "workspaceContains:**/*.ferris"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ferrisscript",
        "aliases": [
          "FerrisScript",
          "ferrisscript"
        ],
        "extensions": [
          ".ferris"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ferrisscript",
        "scopeName": "source.ferrisscript",
        "path": "./syntaxes/ferrisscript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ferrisscript",
        "path": "./snippets/ferrisscript.json"
      }
    ],
    "configuration": {
      "title": "FerrisScript",
      "properties": {
        "ferrisscript.compilerPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the FerrisScript compiler executable. If empty, searches workspace and PATH. For security, use absolute path to trusted compiler location.",
          "scope": "machine-overridable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.3.0"
  }
}
