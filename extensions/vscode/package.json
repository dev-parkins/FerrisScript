{
  "name": "ferrisscript",
  "displayName": "FerrisScript",
  "description": "Syntax highlighting and code snippets for FerrisScript - a Rust-inspired scripting language for Godot 4.x",
  "version": "0.1.0",
  "publisher": "ferrisscript",
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-parkins/FerrisScript"
  },
  "bugs": {
    "url": "https://github.com/dev-parkins/FerrisScript/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "ferrisscript",
    "godot",
    "rust",
    "game development",
    "scripting"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onLanguage:ferrisscript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ferrisscript",
        "aliases": [
          "FerrisScript",
          "ferrisscript"
        ],
        "extensions": [
          ".ferris"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ferrisscript",
        "scopeName": "source.ferrisscript",
        "path": "./syntaxes/ferrisscript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ferrisscript",
        "path": "./snippets/ferrisscript.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.19.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  }
}
